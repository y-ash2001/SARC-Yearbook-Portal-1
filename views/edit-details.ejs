<!DOCTYPE html>
<head>
    <meta charset="utf-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <title>Edit Profile</title>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <link rel="stylesheet" href="/assets/stylesheets/edit.css">
</head>

<body>
    <nav class="navbar">
        <div class="search-bar">
            <form action="/<%= id %>/search" method="POST">
            <input type="text" name="user[bitsid]" id="search" placeholder="Search by BITS ID">
            </form>
        </div>
    
        <div class="links" id="nav-links">
            <ul class="nav-links">
                <li><a href="/profile/<%= id %>">Profile</a></li>
                <li><a href="/<%= id %>/nominate">Nominate a Friend</a></li>
                <li><a href="/<%= id %>/notifications">Notifications</a></li>
                <li><a href="/auth/logout">Logout</a></li>
            </ul>
        </div>
    
        <div class="button_container" id="toggle" onclick="toggle()">
            <span class="top"></span>
            <span class="middle"></span>
            <span class="bottom"></span>
        </div>
    
    </nav>
    <% if (typeof msg!=="undefined") { %>
        <div class="success-msg"><%= msg %></div>
    <% } %>
    <section class="landing">
        <h1>Edit Profile</h1>
        <form class="card" action="/edit/<%= id %>" method="POST">
            <label for="caption" id="discipline">BITS ID:</label>
            <input class="form-styling" type="text" placeholder="2019A3PS0245P" name="user[bitsid]">
            <label for="caption" id="discipline">Discipline:</label>
            <input class="form-styling" type="text" placeholder="Economics" name="user[disc]">
            <label for="caption" id="quote">Yearbook Quote:</label>
            <input class="form-styling" type="text" placeholder="Your quote" name="user[quote]">
            <input type="submit" class="btn">
        </form>    
    </section>

    <footer>
        <h3>Follow us on:</h3>
        <div class="icons">
            <a href="https://www.linkedin.com/company/arcbitspilani/?originalSubdomain=in"><img src="/assets/images/linkedin.png" id="linkedin"></a>
            <a href="https://www.facebook.com/arcbitspilani/"><img src="/assets/images/facebook.png" id="fb"></a>
            <a href="https://www.instagram.com/sarcbitspilani/"><img src="/assets/images/instagram.png" id="insta"></a>
        </div>
        <a href="/<%= id %>/developers"><button id="devs">Developers</button></a>
    </footer>
    <script src="/assets/scipts/app.js"></script>
    <script src="/assets/scipts/new.js"></script>
</body>
</html>